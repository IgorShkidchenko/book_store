.general-cart-item.divider-lg-bottom{ class: "#{order_item.id}" }
  %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
    %span{'aria-hidden': "true"} &times;
  .general-img-wrap-table
    = Book.where(id: order_item.book_id).includes(:covers).first.decorate.main_book_cover
  %p.title
    = link_to order_item.book_title, book_path(order_item.book)
  %table.table
    %tr
      %td
        %span.in-grey-600
          = t('cart.page.book.price')
      %td
        %span.font-16.in-gold-500
          = t('price', price: order_item.book_price)
    %tr
      %td.vertical-middle
        %span.in-grey-600
          = t('cart.page.book.quantity')
      = render 'form', order_item: order_item
    %tr
      %td
        %span.in-grey-600
          = t('cart.page.book.subtotal')
      %td
        %span.font-16.in-gold-500{ class: "#{order_item.id}" }
          = t('price', price: order_item.total_price)
