- provide(:title, t('checkout.delivery'))
%main.container.general-main-wrap
  %h1.general-title-margin
    = t('checkout.title')
  %ul.steps.list-inline
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.address')
    %li.step-divider
    %li.step.active
      %span.step-number
        = t('checkout.steps_numbers.second')
      %span.step-text.hidden-xs
        = t('checkout.delivery')
    %li.step-divider
    %li.step
      %span.step-number
        = t('checkout.steps_numbers.third')
      %span.step-text.hidden-xs
        = t('checkout.payment')
    %li.step-divider
    %li.step
      %span.step-number
        = t('checkout.steps_numbers.fourth')
      %span.step-text.hidden-xs
        = t('checkout.confirm')
    %li.step-divider
    %li.step
      %span.step-number
        = t('checkout.steps_numbers.fifth')
      %span.step-text.hidden-xs
        = t('checkout.complete')
  %h3.general-subtitle
    = t('checkout.delivery')
  .visible-xs
    .general-cart-item.divider-lg-bottom
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600
              = t('checkout.delivery_page.method')
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{ type: 'radio', hidden: 'true' }
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600
              = t('checkout.delivery_page.days')
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600
              = t('checkout.delivery_page.price')
          %td
            %span.font-16.in-gold-500 €5.00
    .general-cart-item.divider-lg-bottom.mb-30
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600
              = t('checkout.delivery_page.method')
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{ type: 'radio', hidden: 'true' }
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600
              = t('checkout.delivery_page.days')
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600
              = t('checkout.delivery_page.price')
          %td
            %span.font-16.in-gold-500 €5.00
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th.col-method
            %span.in-grey-600.ml-40
              = t('checkout.delivery_page.method')
          %th
            %span.in-grey-600
              = t('checkout.delivery_page.days')
          %th
            %span.in-grey-600
              = t('checkout.delivery_page.price')
      %tbody
        %tr
          %td
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{ type: 'radio', hidden: 'true' }
                %span.radio-icon
                %span.radio-text Delivery Next Day!
          %td
            %span 3 to 7 days
          %td
            %span.font-16.in-gold-500 €28.50
        %tr
          %td
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{ type: 'radio', hidden: 'true' }
                %span.radio-icon
                %span.radio-text Delivery Next Day!
          %td
            %span 3 to 7 days
          %td
            %span.font-16.in-gold-500 €28.50
  .general-text-align
    = render 'orders/order_summary', order: current_order, right: false
  .text-center
    %button.btn.btn-default.mb-20
      = t('checkout.buttons.next')
