- provide(:title, t('checkout.complete'))
%main.container.general-main-wrap
  %h1.general-title-margin
    = t('checkout.title')
  %ul.steps.list-inline
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.address')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.delivery')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.payment')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.confirm')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.complete')
  .text-center.mb-40
    %h3.general-subtitle
      = t('checkout.complete_page.thank_you')
    %p.fw-300
      = t('checkout.complete_page.msg_was_sent', email: order.user_email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0
          = t('checkout.complete_page.order_number', number: order.number)
        %p.general-address.mb-30
          = order.creation_date
      %p.general-address
        = @checkout_helper.billing.full_name
        %br
          = @checkout_helper.billing.street
        %br
          = @checkout_helper.billing.city_with_zip
        %br
          = @checkout_helper.billing.country
        %br
          = t('checkout.address_phone', number: @checkout_helper.billing.phone)
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0
        = t('checkout.complete_page.order_number', number: order.number)
      %p.general-address.mb-30
        = order.creation_date
  .visible-xs
    = render partial: 'orders/mobile_cart_row', collection: @checkout_helper.order_items, as: :order_item
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      = render 'orders/item_titles_row'
      = render partial: 'orders/cart_row', collection: @checkout_helper.order_items, as: :order_item, locals: { checkout_complete: true }
  .text-center.general-text-right
    = render 'orders/order_summary', order: order, right: true
  .text-center
    = link_to t('checkout.buttons.back_to_store'), books_path, class: 'btn btn-default mb-20'
