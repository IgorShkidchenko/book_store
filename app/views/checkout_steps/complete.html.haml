- provide(:title, t('checkout.complete'))
%main.container.general-main-wrap
  %h1.general-title-margin
    = t('checkout.title')
  %ul.steps.list-inline
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.address')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.delivery')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.payment')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.confirm')
    %li.step-divider
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs
        = t('checkout.complete')
  .text-center.mb-40
    %h3.general-subtitle
      = t('checkout.complete_page.thank_you')
    %p.fw-300
      = t('checkout.complete_page.msg_was_sent', email: 'User.email')
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0 Order #R25314582
        %p.general-address.mb-30
          = current_order.created_at.strftime('%B %d, %Y')
      %p.general-address
        John Doe
        %br
        44 Fifth Ave v231
        %br
        New York NY 1001
        %br
        United States
        %br
        Phone +16507599755
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0 Order #R25314582
      %p.general-address.mb-30
        = current_order.created_at.strftime('%B %d, %Y')
  .visible-xs
    = render partial: 'orders/mobile_cart_row', collection: current_order.order_items.map(&:decorate), as: :order_item
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      = render 'orders/item_titles_row'
      = render partial: 'orders/cart_row', collection: current_order.order_items.map(&:decorate), as: :order_item
  .text-center.general-text-right
    = render 'orders/order_summary', order: current_order, right: true
  .text-center
    %button.btn.btn-default.mb-20
      = t('checkout.buttons.back_to_store')
