- provide(:title, t('layout.link.home'))
%main.container
  #slider.carousel.slide{'data-ride': 'carousel'}
    %ol.carousel-indicators
      %li.active{'data-target': '#slider', 'data-slide-to': '0'}
      %li{'data-target': '#slider', 'data-slide-to': '1'}
      %li{'data-target': '#slider', 'data-slide-to': '2'}
    .carousel-inner{role: 'listbox'}
      - latest_three.each_with_index do |book, index|
        %div{'class': "item#{' active' if index.zero?}"}
          .row
            .col-sm-5
              .general-img-wrap
                = book.main_book_cover
            .col-sm-7
              .mb-60
                %h1
                  = book.title
                %p.lead
                  = t('book.short_description', description: book.short_description)
                %p.lead.small
                  = book.authors_as_string
                .general-align
                  = link_to t('home.buy_button'), order_items_path(order_item: { book_id: book.id, quantity: 1 }), remote: true, method: :post, class: 'button btn btn-primary'
    %a.left.carousel-control{href: '#slider', role: 'button', 'data-slide': 'prev'}
      %span.icon-prev{'aria-hidden': 'true'}
      %span.sr-only
    %a.right.carousel-control{href: '#slider', role: 'button', 'data-slide': 'next'}
      %span.icon-next{'aria-hidden': 'true'}
      %span.sr-only
.container
  .jumbotron.text-center.mb-0
    %h2.h1
      = t('home.welcome')
    .mb-res-50
      %p
        = t('home.about_us')
    = link_to t('home.start_button'), categories_path, class: 'button btn btn-default'
  .mb-35
    %h3
      = t('home.best_sellers')
    .row
      = render partial: 'books/book', collection: best_sellers, as: :book
