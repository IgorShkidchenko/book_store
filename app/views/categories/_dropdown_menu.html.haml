%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = t('catalog.dropdown.newest')
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li
    = link_to t('catalog.dropdown.newest'), categories_path(category_id: category&.id, filter: Category::VALID_FILTERS[:newest])
  %li
    = link_to t('catalog.dropdown.popular'), '#'
  %li
    = link_to t('catalog.dropdown.price_ASC'), categories_path(category_id: category&.id, filter: Category::VALID_FILTERS[:price])
  %li
    = link_to t('catalog.dropdown.price_DESC'), categories_path(category_id: category&.id, filter: Category::VALID_FILTERS[:price_desc])
  %li
    = link_to t('catalog.dropdown.title_ASC'), categories_path(category_id: category&.id, filter: Category::VALID_FILTERS[:title])
  %li
    = link_to t('catalog.dropdown.title_DESC'), categories_path(category_id: category&.id, filter: Category::VALID_FILTERS[:title_desc])
