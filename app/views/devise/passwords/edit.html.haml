- provide(:title, t('devise_pages.form.password'))
%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('devise_pages.password.edit.set')
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'general-form' }, validate: true,
    defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group mb-30' },
    label_html: { class: 'control-label input-label' } }) do |f|
    = f.hidden_field :reset_password_token
    = f.input :password, label: t('devise_pages.password.edit.type'), autofocus: true, autocomplete: 'off',
    placeholder: t('devise_pages.password.edit.type')
    = f.input :password_confirmation, label: t('devise_pages.password.edit.confirm'), autocomplete: 'off',
    placeholder: t('devise_pages.password.edit.confirm')
    = f.button :submit, t('devise_pages.password.edit.submit'), class: 'btn-default center-block mb-20'
