.col-sm-5.col-sm-offset-1
  %p.in-gold-500.font-18.mb-25
    = t('user_settings.password')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :patch,
  html: { class: 'general-form-md divider-lg-bottom pb-25' },
  defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' },
  label_html: { class: 'control-label input-label' } }) do |f|
    = f.input :current_password, label: t('user_settings.old_password'), placeholder: t('user_settings.old_password'), require: false unless current_user.provider
    = f.input :password, label: t('user_settings.new_password'), placeholder: t('user_settings.new_password')
    = f.input :password_confirmation, label: t('user_settings.confirm_password'), placeholder: t('user_settings.confirm_password')
    .general-text-align
      = f.button :submit, t('user_settings.save'), class: 'btn-default mb-10'
