- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
      = t('layout.header.my_account')
    %ul.dropdown-menu
      %li
        = link_to t('layout.link.settings'), edit_user_registration_path
      %li
        = link_to t('layout.link.orders'), user_orders_path(current_user)
      %li.divider{ role: 'separator' }
      %li
        = link_to t('layout.link.log_out'), destroy_user_session_path, method: :delete
- else
  %li
    = link_to t('layout.link.sign_up'), new_user_registration_path
  %li
    = link_to t('layout.link.log_in'), new_user_session_path
