%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('layout.header.bookstore'), root_path, class: 'navbar-brand'
      = link_to cart_path, class: 'shop-link pull-right visible-xs' do
        .cart_link
          = render partial: 'layouts/header/cart'
    = link_to cart_path, class: 'shop-link pull-right hidden-xs' do
      .cart_link
        = render partial: 'layouts/header/cart'
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('layout.link.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}
              = t('layout.link.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @categories.each do |category|
                %li
                  = link_to category.name, categories_path(category_id: category), class: 'collapse-link'
          = render partial: 'layouts/header/devise_links'
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('layout.link.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t('layout.link.shop')
            %ul.dropdown-menu
              - @categories.each do |category|
                %li
                  = link_to category.name, categories_path(category_id: category)
          = render partial: 'layouts/header/devise_links'
