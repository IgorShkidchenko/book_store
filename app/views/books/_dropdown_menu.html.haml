%a.dropdown-toggle.lead.small{ href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
  = t('catalog.dropdown.newest')
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  - Filter::VALID_FILTERS.keys.each do |filter|
    - if category
      %li
        = link_to t("catalog.dropdown.#{filter}"),
        category_books_path(category, filter: Filter::VALID_FILTERS[filter], page: params[:page])
    - else
      %li
        = link_to t("catalog.dropdown.#{filter}"),
        books_path(filter: Filter::VALID_FILTERS[filter], page: params[:page])
  %li
    = link_to t('catalog.dropdown.popular'), '#'
