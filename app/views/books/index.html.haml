- provide(:title, @category ? @category.name : t('catalog.all'))
%main.container
  %h1.general-title-margin
    = t('catalog.title')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        = render 'dropdown_menu', category: @category
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to books_path, class: 'filter-link' do
          = t('catalog.all')
          %span.badge.general-badge
            = categories.sum(&:assosiated_books_quantity)
      - categories.each do |category|
        %li.mr-35
          = link_to category_books_path(category), class: 'filter-link' do
            = category.name
            %span.badge.general-badge
              = category.assosiated_books_quantity
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10
    .dropdown
      = render 'dropdown_menu', category: @category
  .mb-120
    .row
      = render partial: 'books/book', collection: chosen_books, as: :book
    .text-center
      = pagy_bootstrap_nav(@pagy).html_safe
