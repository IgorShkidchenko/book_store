.col-xs-6.col-sm-3.book-catalog
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = book.main_book_cover
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(book), class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{ 'aria-hidden': 'true' }
          = link_to order_items_path(order_item: { book_id: book.id, quantity: OrderItemDecorator::MINIMUM_QUANTITY }),
          remote: true, method: :post, class: 'thumb-hover-link to_cart' do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title
      = book.title
    %p.font-16.in-gold-500
      = t('price', price: book.price)
    %span.divider-sm
    %p.lead.small
      = book.authors_as_string
