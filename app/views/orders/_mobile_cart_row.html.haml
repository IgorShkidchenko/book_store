.general-cart-item.divider-lg-bottom{ class: order_item.id.to_s }
  %button.close.general-cart-close{ type: 'button', 'aria-label': 'Close' }
    %span{ 'aria-hidden': 'true' } &times;
  .general-img-wrap-table
    = link_to book_path(order_item.book) do
      = order_item.book.decorate.main_book_cover
  %p.title.in-gold-500
    = order_item.book_title
  %table.table
    %tr
      %td
        %span.in-grey-600
          = t('cart.page.book.price')
      %td
        %span.font-16.in-gold-500
          = t('price', price: order_item.book_price)
    %tr
      %td.vertical-middle
        %span.in-grey-600
          = t('cart.page.book.quantity')
      = render 'orders/form', order_item: order_item
    %tr
      %td
        %span.in-grey-600
          = t('cart.page.book.subtotal')
      %td
        %span.font-16.in-gold-500{ class: order_item.id.to_s }
          = t('price', price: order_item.total_price)
