- provide(:title, t('orders.my_orders'))
%main.container.general-main-wrap
  - if orders.any?
    %h1.mt-0.mb-25
      = t('orders.my_orders')
    %p.lead.small.mb-10.visible-xs
      = t('orders.sort_by')
    .dropdowns.dropdown.general-order-dropdown
      %a.dropdown-toggle.lead.small{ href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
        = presenter.chosen_filter
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          = link_to t('orders.filters.all'), user_orders_path(@user)
        = presenter.valid_filters
    .visible-xs
      .general-cart-item
        %table.table
          = render partial: 'orders/mobile_orders_row', collection: orders, as: :order
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th
              %span.in-grey-600
                = t('orders.number')
            %th
              %span.in-grey-600
                = t('orders.completed_at')
            %th
              %span.in-grey-600
                = t('orders.status')
            %th
              %span.in-grey-600
                = t('orders.total')
        %tbody
          = render partial: 'orders/orders_row', collection: orders, as: :order
  - else
    .container
      .jumbotron.text-center.mb-0
        %h1
          = presenter.no_orders_text
        = presenter.no_orders_link
