%div{ class: order.id.to_s }
  %p.in-gold-500.font-18
    = t('cart.page.order_summary')
  %table.general-summary-table{ class: "#{'general-summary-table-right general-text-right' if right}" }
    %tr
      %td
        %p.font-16
          = t('cart.page.subtotal')
      %td
        %p.font-16
          = t('price', price: order.subtotal_price)
    %tr
      %td
        %p.font-16
          = t('cart.page.coupon')
      %td
        %p.font-16
          = order.coupon_discount
    - if order.delivery_method
      %tr
        %td
          %p.font-16
            = t('cart.page.delivery')
        %td
          %p.font-16
            = t('price', price: order.delivery_method_cost)
    %tr
      %td
        %strong.font-17
          = t('cart.page.order_total')
      %td
        %strong.font-17
          = t('price', price: order.total_price)
