- provide(:title, t('cart.page.title'))
%main.container.general-main-wrap
  %h1.general-title-margin
    = t('cart.page.title')
  - if @order_items.present?
    .visible-xs
      = render partial: 'orders/mobile_cart_row', collection: order_items, as: :order_item
    .hidden-xs
      %table.table.table-hover
        = render 'orders/item_titles_row'
        = render partial: 'orders/cart_row', collection: order_items, as: :order_item
    .general-order-wrap
      .row
        = render 'coupons/form', order: @order
        .col-sm-8
          .res-mr-200.text-center.general-text-right
            = render 'order_summary', order: @order.decorate, right: true
            %button.btn.btn-default.mb-20.visible-xs-inline-block
              = t('cart.page.cheackout')
    .text-center
      = link_to t('cart.page.cheackout'), checkout_step_path(:address), class: 'btn btn-default mb-20 hidden-xs'
  - else
    .container
      .jumbotron.text-center.mb-0
        %h2.h1
          = t('cart.page.empty_cart')
        = link_to t('home.start_button'), books_path, class: 'button btn btn-default'
