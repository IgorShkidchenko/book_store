= semantic_form_for [:admin, @book], builder: ActiveAdmin::FormBuilder do |f|
  = f.inputs 'Book information' do
    = f.input :title
    = f.input :description, as: :simplemde_editor
    = f.input :price
    = f.input :category
    = f.input :authors, as: :select, collection: Author.all.map { |author| [author.name, author.id] }
    = f.input :published_year
    = f.input :materials
    = f.input :height
    = f.input :width
    = f.input :depth
    = f.input :cover, as: :file
  = f.actions
